# Environment Variables Template for Mshando User Service
# Copy this file to .env and fill in your actual values
# DO NOT commit the .env file to version control

# Spring Profile
SPRING_PROFILES_ACTIVE=local

# Database Configuration
DATABASE_URL=jdbc:postgresql://localhost:5432/taskrabbit_users
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=your_database_password_here

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_make_it_long_and_secure
JWT_EXPIRATION=86400

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_specific_password_here
EMAIL_SMTP_AUTH=true
EMAIL_SMTP_STARTTLS=true

# Application URLs
APP_BASE_URL=http://localhost:8081
FRONTEND_URL=http://localhost:3000

# Eureka Configuration
EUREKA_SERVER_URL=http://localhost:8761/eureka/

# Logging Levels
LOG_LEVEL_APP=DEBUG
LOG_LEVEL_SECURITY=DEBUG
LOG_LEVEL_WEB=DEBUG
LOG_LEVEL_SQL=DEBUG
LOG_LEVEL_SQL_BINDING=TRACE
LOG_LEVEL_ROOT=INFO

# File Upload Configuration
FILE_UPLOAD_DIR=./uploads/user-service
FILE_UPLOAD_MAX_SIZE=10485760

# JPA Configuration
JPA_DDL_AUTO=update
JPA_SHOW_SQL=false

# Management Configuration
MANAGEMENT_HEALTH_SHOW_DETAILS=always

# Production specific (use when SPRING_PROFILES_ACTIVE=production)
# DATABASE_URL=jdbc:postgresql://your-prod-db-host:5432/taskrabbit_users
# DATABASE_USERNAME=your_prod_db_username
# DATABASE_PASSWORD=your_prod_db_password
# JWT_SECRET=your_super_secure_production_jwt_secret
# LOG_LEVEL_APP=INFO
# LOG_LEVEL_SECURITY=WARN
# JPA_DDL_AUTO=validate
# MANAGEMENT_HEALTH_SHOW_DETAILS=never
