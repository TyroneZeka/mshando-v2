#!/bin/sh
# Simplified pre-commit hook to avoid hanging

echo "Ì¥ç Running pre-commit checks..."

# Basic file checks
echo "Ì≥Å Checking staged files..."
staged_files=$(git diff --cached --name-only)

if echo "$staged_files" | grep -q '\.java$'; then
    echo "‚úÖ Java files detected in commit"
fi

if echo "$staged_files" | grep -q '\.md$'; then
    echo "‚úÖ Documentation files detected in commit"
fi

if echo "$staged_files" | grep -q '\.yml$\|\.yaml$'; then
    echo "‚úÖ Configuration files detected in commit"
fi

echo "Ì≥ä Total files to commit: $(echo "$staged_files" | wc -l)"

echo "‚úÖ Pre-commit checks completed!"
echo "Ì∫Ä Ready to commit!"
